<%= form_for(@blog, html: { multipart: true } ) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <% if @blog.image.exists? %>
      <%= image_tag @blog.image(:thumb) %><br>
      <%= f.check_box :remove_image  %>
      <%= f.label :remove_image, 'Remove this image', class: 'thin' %>
      <p><b>or</b></p>
    <% end %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
