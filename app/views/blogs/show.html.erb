<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %> <br><br>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<% if @blog.image.exists? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @blog.image(:medium) %>
  </p>
<% end %>


<p>
  <strong>Content:</strong>
  <%= @blog.content %>
</p>

<p>
  <strong>Status:</strong>
  <%= @blog.status %>
</p>

<p>
  <strong>User:</strong>
  <%= @blog.user.email %>
</p>


<%= render 'comments/form', comment: @blog.comments.build, blog: @blog if user_signed_in? %>
<%= nested_comments @blog.comments.arrange(order: :created_at) %>

